    // Background image preloading
    link(rel="preload" as="image" href="../images/main-background-640-1136.png" media="max-width: 767px")
    link(rel="preload" as="image" href="../images/main-background-768-1024.png" media="(min-width: 768) and (max-width: 1279)")
    link(rel="preload" as="image" href="../images/main-background-1280-720.png" media="(min-width: 1280) and (max-width: 1920)")
    link(rel="preload" as="image" href="../images/main-background-1920-1080.png" media="min-width: 1921")

